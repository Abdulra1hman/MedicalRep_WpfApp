<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UsernameData" HorizontalAlignment="Left" Height="29" Margin="294,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" FontSize="20" TextDecorations="Underline"/>
        <TextBox x:Name="PasswordData" HorizontalAlignment="Left" Height="29" Margin="294,214,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" FontSize="20"/>
        <Label Content="User name :" HorizontalAlignment="Left" Margin="172,105,0,0" VerticalAlignment="Top" Height="33" Width="118" FontSize="20" FontStyle="Italic" FontWeight="DemiBold"/>
        <Label Content="Password :" HorizontalAlignment="Left" Margin="186,210,0,0" VerticalAlignment="Top" Height="33" Width="108" FontSize="20" FontStyle="Italic" FontWeight="DemiBold"/>
        <Button Content="Login" HorizontalAlignment="Center" Height="44" Margin="0,329,0,0" VerticalAlignment="Top" Width="94" Click="Login" FontSize="20"/>

    </Grid>
</Window>
